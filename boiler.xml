<mujoco model="plane_and_cube">
    <compiler angle="radian" />
    <option timestep="0.01" />

    <!-- The world body -->
    <worldbody>
        <!-- World frame -->
        <frame name="world_frame" pos="0 0 0" euler="0 0 0" />

        <!-- The ground plane -->
        <geom name="ground" type="plane" size="5 5 0.1" rgba="0.9 0.9 0.9 1" />

        <!-- The cube -->
        <body name="cube" pos="0 0 0.1">
            <geom name="cube_geom" type="box" size="0.1 0.1 0.1" rgba="0.8 0.1 0.1 1" />
            <joint name="cube_free" type="free" />
        </body>

        <!-- Light source -->
        <light name="main_light" pos="0 0 3" dir="0 0 -1" diffuse="1 1 1" specular="0.1 0.1 0.1" />
    </worldbody>

    <!-- Actuator and sensor definitions (optional) -->
    <actuator>
        <!-- Define any actuators here -->
    </actuator>

    <sensor>
        <!-- Define any sensors here -->
    </sensor>
</mujoco>
